@model List<AbidzarFrm.Rukuntangga.Entities.TbJenisInformasiRow>

@{
    AbidzarFrm.Rukuntangga.Entities.TbJenisInformasiRow jenisInformasi = null;
    jenisInformasi = Model.FirstOrDefault();

    <div id="divBerita">
        @if (jenisInformasi.tbDetailJenisInformasiRow != null)
        {
            foreach (var item in jenisInformasi.tbDetailJenisInformasiRow)
            {
                var img = (item.NamaFile == null || string.IsNullOrEmpty(item.NamaFile)) ? "../../Content/adminlte/img/avatar0.png" : VirtualPathUtility.ToAbsolute("~/upload/") + item.NamaFile;

                <div class="col-md-3 col-md-3 col-xs-6">
                    <div class="box box-primary">
                        <div class="box-header with-border overflow" style="color:dodgerblue; text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)">
                            <a href="@Url.Action("Detail", "Berita", new {id = item.Id })" title="@item.Judul"><i class="fa fa-bullhorn margin-r-5"></i>@item.Judul</a>
                            <div class="box-tools pull-right">
                                <span class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></span>
                            </div>
                        </div>

                        <div class="box-body" style="height:150px;background-image: url(@img);background-repeat:no-repeat; background-size: 100% 100%;">
                        </div>
                        <div class="box-footer">
                            <a href="javascript:GetBerita(@item.IdJenisInformasi)"><h7 class="text-muted">@item.IdJenisInformasiJenisInformasi</h7></a> 
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}


